            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Obat"
                android:fontFamily="@font/popsem"
                android:textSize="15sp"
                />


            <HorizontalScrollView
                android:layout_width="match_parent"
