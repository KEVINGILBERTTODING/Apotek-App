<?xml version="1.0" encoding="utf-8"?>



<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="20dp"
    android:id="@+id/cardApoteker"
    android:layout_marginTop="40dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_obat"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_obat" />


        <TextView
            android:id="@+id/nm_obat"
            android:layout_width="wrap_content"
            android:text="Paracetamol"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_obat"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/popsem"
            android:textColor="@color/dark"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/jenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nm_obat"
            android:layout_toRightOf="@id/img_obat"
            android:fontFamily="@font/popmed"
            android:text="Tablet"
            android:textColor="@color/gray"
            android:textSize="15sp" />


        <TextView

            android:id="@+id/expired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/card_shift"
            android:fontFamily="@font/popmed"
            android:padding="5dp"
            android:text="expired"
            android:textColor="@color/main"
            android:textSize="15sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>




