<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailApotekerActivity">

    <FrameLayout
        android:id="@+id/frmBanneApoteker"
        android:layout_width="match_parent"
        android:layout_height="520dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="520dp"
            android:background="@drawable/bg_apoteker">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/ic_btnback" />

        </RelativeLayout>


    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frmBanneApoteker"
        android:layout_marginTop="-40dp"
        android:background="@drawable/container_detail_obat">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frmBanneApoteker"
                android:layout_margin="20dp"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/det_nmApoteker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/popsem"
                    android:text="Tasya Theressa"
                    android:textColor="@color/dark"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/det_idApoteker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popsem"
                    android:text="A0002"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popsem"
                    android:text="Telephone"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/dark"
                    android:textSize="20sp" />



                <TextView
                    android:id="@+id/det_nohpApoteker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popsem"
                    android:text="0812345678"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popsem"
                    android:text="Shift"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/dark"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/det_shiftApoteker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popsem"
                    android:text="Pagi/Malam"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popsem"
                    android:text="Kota"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/dark"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/det_kotaApoteker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popsem"
                    android:text="Ratepao"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popsem"
                    android:text="Alamat"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/dark"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/det_alamatApoteker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popsem"
                    android:layout_marginTop="5dp"
                    android:text="Jl. Pembangunan no 32"
                    android:textSize="18sp" />


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>