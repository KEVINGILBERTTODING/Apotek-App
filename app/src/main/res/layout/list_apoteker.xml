<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardApoteker"
    card_view:cardCornerRadius="@dimen/_15sdp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp" >

        <ImageView
            android:id="@+id/img_apoteker"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/icon_apoteker2" />


        <TextView
            android:id="@+id/txt_nama_apoteker"
            android:layout_width="wrap_content"
            android:text="Tasya Theressa"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_apoteker"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/popsem"
            android:textColor="@color/dark"
            android:textSize="@dimen/_9sdp" />


        <TextView
            android:id="@+id/txt_noHp_apoteker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_nama_apoteker"
            android:layout_toRightOf="@id/img_apoteker"
            android:fontFamily="@font/popmed"
            android:text="09999999"
            android:textColor="@color/gray"
            android:textSize="@dimen/_8sdp" />


        <TextView
            android:id="@+id/txt_shift_apoteker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/card_shift"
            android:fontFamily="@font/popmed"
            android:padding="@dimen/_5sdp"
            android:text="Pagi"
            android:textColor="@color/main"
            android:textSize="@dimen/_8sdp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>