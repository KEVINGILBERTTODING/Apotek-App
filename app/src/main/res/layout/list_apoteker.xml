<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    android:id="@+id/cardApoteker"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_id"
            android:layout_width="match_parent"
            android:text="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_id_apoteker"
            android:layout_width="match_parent"
            android:text="A00OP1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_nama_apoteker"
            android:layout_width="match_parent"
            android:text="Tasya Theressa"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_kota_apoteker"
            android:layout_width="match_parent"
            android:text="Palu"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_noHp_apoteker"
            android:layout_width="match_parent"
            android:text="09999999"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_shift_apoteker"
            android:layout_width="match_parent"
            android:text="Malam"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_alamat_apoteker"
            android:layout_width="match_parent"
            android:text="Jl. Sudirman"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.cardview.widget.CardView>