<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="20dp"
    android:id="@+id/cardApoteker"
    android:layout_marginTop="40dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_apoteker"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_apoteker2" />


        <TextView
            android:id="@+id/txt_nama_apoteker"
            android:layout_width="wrap_content"
            android:text="Tasya Theressa"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_apoteker"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/popsem"
            android:textColor="@color/dark"
            android:textSize="18sp"
            />


        <TextView
            android:id="@+id/txt_noHp_apoteker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_nama_apoteker"
            android:layout_toRightOf="@id/img_apoteker"
            android:fontFamily="@font/popmed"
            android:text="09999999"
            android:textColor="@color/gray"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/txt_shift_apoteker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/card_shift"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/popmed"
            android:padding="5dp"
            android:text="Pagi"
            android:textColor="@color/main"
            android:textSize="15sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>