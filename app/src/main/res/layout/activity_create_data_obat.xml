<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateDataObat">

    <FrameLayout
        android:id="@+id/frmBanneObat"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/main"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"

            >

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_btnback" />

        </RelativeLayout>


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/frmBanneObat"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode Obat"
            android:fontFamily="@font/popsem"
            android:textSize="15sp"
            />

        <EditText
            android:id="@+id/edt_KodeObat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kode Obat"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Obat:"
            android:fontFamily="@font/popsem"
            android:textSize="15sp"
            />

        <EditText
            android:id="@+id/edt_NamaObat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Obat"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satuan"
            android:fontFamily="@font/popsem"
            android:textSize="15sp"
            />

        <EditText
            android:id="@+id/edt_SatuanObat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Satuan"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stok"
            android:fontFamily="@font/popsem"
            android:textSize="15sp"
            />

        <EditText
            android:id="@+id/edt_JumlahObat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Stok Obat"
            android:inputType="number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expired Date"
            android:fontFamily="@font/popsem"
            android:textSize="15sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/edt_ExpiredDate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:editable="false"
                android:focusable="false"
                android:hint="Expired Date"
                android:inputType="date"
                android:paddingRight="20dp" />

            <ImageView
                android:id="@+id/imgCalendar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_calendar"
                android:focusable="true"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:fontFamily="@font/popsem"
            android:textSize="15sp"
            />

        <EditText
            android:id="@+id/edt_DescObat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Deskripsi"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:layout_gravity="top|start"
            android:minLines="6"
            android:maxLength="255"
            android:lines="8"
            android:gravity="start"
            android:maxLines="10"
            />

        <Button
            android:id="@+id/btnInsert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="20dp"
            android:background="@color/main"
            android:textColor="@color/white"
            android:onClick="insertObat"
            android:fontFamily="@font/popsem"
            />

    </LinearLayout>

</RelativeLayout>