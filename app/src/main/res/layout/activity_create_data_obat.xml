<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateDataObat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:id="@+id/frmHeader1"
        android:background="@drawable/wave"
        >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">


                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/ic_btnback" />


                <TextView
                    android:id="@+id/tvTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnBack"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/popsem"
                    android:text="Masukkan data obat"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

        </RelativeLayout>

    </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frmHeader1"
            android:layout_marginTop="-40dp"
            android:background="@drawable/container"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="40dp"
                >


                <TextView
                    android:id="@+id/tv_daftar_apoteker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popsem"
                    android:padding="5dp"
                    android:text="Data Obat"
                    android:textColor="@color/dark"
                    android:textSize="20sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/frmBanneObat"
                        android:orientation="vertical">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_id_obat"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            app:startIconDrawable="@drawable/ic_key"
                            app:boxCornerRadiusTopStart="15dp"
                            app:boxCornerRadiusBottomEnd="15dp"
                            app:boxStrokeWidth="3dp"
                            app:boxCornerRadiusBottomStart="15dp"
                            app:boxCornerRadiusTopEnd="15dp"
                            android:textColor="@color/dark"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_KodeObat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:fontFamily="@font/popmed"
                                android:textColor="@color/dark"
                                android:hint="ID Obat">
                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/edt_NmObat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            app:startIconDrawable="@drawable/ic_obat"
                            app:boxCornerRadiusTopStart="15dp"
                            app:boxCornerRadiusBottomEnd="15dp"
                            app:boxStrokeWidth="3dp"
                            android:layout_marginTop="20dp"
                            app:boxCornerRadiusBottomStart="15dp"
                            app:boxCornerRadiusTopEnd="15dp"
                            android:textColor="@color/dark"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_NamaObat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:fontFamily="@font/popmed"
                                android:textColor="@color/dark"
                                android:hint="Nama Obat">
                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/edt_SObat"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                app:startIconDrawable="@drawable/satuan_icon"
                                app:boxCornerRadiusTopStart="15dp"
                                app:boxCornerRadiusBottomEnd="15dp"
                                app:boxStrokeWidth="3dp"
                                android:layout_marginRight="10dp"
                                app:boxCornerRadiusBottomStart="15dp"
                                app:boxCornerRadiusTopEnd="15dp"
                                android:layout_marginTop="20dp"
                                android:textColor="@color/dark"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_SatuanObat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/popmed"
                                    android:textColor="@color/dark"
                                    android:hint="Satuan">
                                </com.google.android.material.textfield.TextInputEditText>
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/edt_JObat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                app:startIconDrawable="@drawable/stok_icon"
                                app:boxCornerRadiusTopStart="15dp"
                                app:boxCornerRadiusBottomEnd="15dp"
                                app:boxStrokeWidth="3dp"
                                app:boxCornerRadiusBottomStart="15dp"
                                android:layout_marginTop="20dp"
                                app:boxCornerRadiusTopEnd="15dp"
                                android:textColor="@color/dark"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_JumlahObat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/popmed"
                                    android:textColor="@color/dark"
                                    android:hint="Stok">
                                </com.google.android.material.textfield.TextInputEditText>
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/popsem"
                            android:text="Jenis Obat"
                            android:layout_marginTop="20dp"
                            android:textSize="15sp" />


                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"

                            >

                            <RadioGroup
                                android:id="@+id/rg_JenisObat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="16dp"
                                    android:background="@drawable/radio_selector"
                                    android:button="@android:color/transparent"
                                    android:fontFamily="@font/popsem"
                                    android:padding="5dp"
                                    android:text="Tablet"
                                    android:textAlignment="center"
                                    android:textColor="@drawable/text_color"
                                    android:textSize="15sp" />

                                <RadioButton
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="16dp"
                                    android:background="@drawable/radio_selector"
                                    android:button="@android:color/transparent"
                                    android:fontFamily="@font/popsem"
                                    android:padding="5dp"
                                    android:text="Sirup"
                                    android:textAlignment="center"
                                    android:textColor="@drawable/text_color"
                                    android:textSize="15sp" />

                                <RadioButton
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="16dp"
                                    android:background="@drawable/radio_selector"
                                    android:button="@android:color/transparent"
                                    android:fontFamily="@font/popsem"
                                    android:padding="5dp"
                                    android:text="Obat Oles"
                                    android:textAlignment="center"
                                    android:textColor="@drawable/text_color"
                                    android:textSize="15sp" />

                                <RadioButton
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="16dp"
                                    android:background="@drawable/radio_selector"
                                    android:button="@android:color/transparent"
                                    android:fontFamily="@font/popsem"
                                    android:padding="5dp"
                                    android:text="Lainnya"
                                    android:textAlignment="center"
                                    android:textColor="@drawable/text_color"
                                    android:textSize="15sp" />


                            </RadioGroup>


                        </HorizontalScrollView>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/edt_ExObat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                app:startIconDrawable="@drawable/expdate_icon"
                                app:boxCornerRadiusTopStart="15dp"
                                app:boxCornerRadiusBottomEnd="15dp"
                                android:layout_marginTop="20dp"
                                app:boxStrokeWidth="3dp"
                                app:boxCornerRadiusBottomStart="15dp"
                                app:boxCornerRadiusTopEnd="15dp"
                                android:textColor="@color/dark"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_ExpiredDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/popmed"
                                    android:textColor="@color/dark"
                                    android:editable="false"
                                    android:focusable="false"
                                    android:inputType="date"
                                    android:hint="Expired Date">
                                </com.google.android.material.textfield.TextInputEditText>
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/edt_DObat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            app:boxCornerRadiusTopStart="15dp"
                            app:boxCornerRadiusBottomEnd="15dp"
                            android:layout_marginTop="20dp"
                            app:boxStrokeWidth="3dp"
                            app:boxCornerRadiusBottomStart="15dp"
                            app:boxCornerRadiusTopEnd="15dp"
                            android:textColor="@color/dark"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_DescObat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|start"
                                android:fontFamily="@font/popmed"
                                android:gravity="start"
                                android:hint="Deskripsi"
                                android:inputType="textMultiLine"
                                android:lines="8"
                                android:maxLength="255"
                                android:maxLines="10"
                                android:minLines="6"
                                android:scrollbars="vertical"
                                android:textColor="@color/dark"
                                android:textSize="15sp"></com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnInsert"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            app:cornerRadius="10dp"
                            android:text="Simpan"
                            android:textAllCaps="false"
                            android:onClick="insertObat"
                            android:textSize="18sp"
                            android:layout_marginTop="40dp"
                            android:fontFamily="@font/popsem"
                            app:icon="@drawable/ic_save"
                            app:iconGravity="textStart"

                            />


                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>