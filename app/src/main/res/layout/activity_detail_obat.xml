<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailObatActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="30dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/det_NmObat"
        android:text="Paracetamol"
        android:textSize="25sp"
        android:fontFamily="@font/popsem"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/det_Satuan"
        android:text="Papan"
        android:textSize="15sp"
        android:fontFamily="@font/popsem"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/det_Jumlah"
        android:text="20"
        android:textSize="15sp"
        android:fontFamily="@font/popsem"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/det_Desc"
        android:text="Obat ini kaya akan manfaat"
        android:textSize="15sp"
        android:fontFamily="@font/popsem"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/det_Expired"
        android:text="2022-12-05"
        android:textSize="15sp"
        android:fontFamily="@font/popsem"
        />




</LinearLayout>

</RelativeLayout>